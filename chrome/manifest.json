{
   "manifest_version": 2,
   "name":"Error Notifier",
   "description":"Error notifications",
   "version":"0.0.1",
   "permissions":[
       "tabs",
       "<all_urls>"
   ],
   "background":{
      "scripts":[
         "scripts/background.js"
      ]
   },
   "browser_action":{
      "default_icon":"icon.png",
      "default_popup":"interface.html"
   },

   "content_scripts":[
      {
         "matches":[
            "<all_urls>"
         ],
         "js":[
            "scripts/content.js"
         ],
         "run_at":"document_start"
      }
   ],
   "web_accessible_resources":[
      "scripts/error_listeners.js"
   ]
}
